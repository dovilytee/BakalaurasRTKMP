{% extends('base.html.twig') %}
{% block body %}
        <!-- List group-->
        <ul class="list-group shadow">
        <!-- list group item-->
        <li class="list-group-item">
            <!-- Custom content-->
            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                <div class="media-body order-2 order-lg-1">
                    <h5 class="mt-0 font-weight-bold mb-2">{{ place.name }}</h5>
                    <p class="font-italic text-muted mb-0 small">{{ place.name }}, {{ place.address }}, {{ place.description }}, {{ place.type }}</p>

                    <div class="d-flex align-items-center justify-content-between mt-1">
                    </div>
                </div>
            </div>
            <!-- Comments Form -->
            <div class="card my-4">

                    <div>
                        <strong>Average Rating:</strong> {{ averageRating|number_format(1) }} / 5
                    </div>

                    <h2>Rate this trip</h2>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                    <h5 class="card-header">Ratings and comments:</h5>
                    <div class="card-body">
                        <div class="form-group">
                            <ul>
                                {% for rating in ratings %}
                                    <li>{{ rating.rating }} Stars ({{ rating.createdAt|date('Y-m-d H:i') }})</li>
                                    <p>{{ rating.comment }}</p>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
            </div>
        </li>
        <!-- End -->
{% endblock %}